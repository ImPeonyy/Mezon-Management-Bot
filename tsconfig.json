{
    "compilerOptions": {
        "target": "ES2022",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "rootDir": "src",
        "outDir": "dist",
        "strict": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": "src",
        "paths": {
            "@/*": ["./*"],
            "@bot/*": ["./bot/*"],
            "@services/*": ["./services/*"],
            "@repositories/*": ["./repositories/*"],
            "@clients/*": ["./clients/*"],
            "@utils/*": ["./utils/*"],
            "@api/*": ["./api/*"]
        }
    }
}